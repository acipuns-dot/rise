{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "backend/Dockerfile",
        "contextPath": "backend"
    },
    "deploy": {
        "startCommand": "/pb/pocketbase serve --http=0.0.0.0:8080",
        "healthcheckPath": "/api/health",
        "restartPolicyType": "ON_FAILURE"
    }
}